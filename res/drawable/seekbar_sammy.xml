<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:endColor="@color/ltgray"
                android:startColor="@color/ltgray"></gradient>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient
                    android:endColor="@color/sammyyellow"
                    android:startColor="@color/sammyyellow"></gradient>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <inset android:insetTop="4dp">
                <shape>
                    <corners android:radius="5dp" />
                    <gradient
                        android:endColor="@color/cmdkgray"
                        android:startColor="@color/cmdkgray"></gradient>
                </shape>
            </inset>
        </clip>
    </item>
</layer-list>