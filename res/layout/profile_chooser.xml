<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ProfileChooserLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/profilecheck"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_vertical"
        android:onClick="profileCheck"
        android:paddingEnd="@dimen/size_large"
        android:paddingStart="@dimen/size_large"
        android:text="@string/profile_check"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/extremeperformance"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_vertical"
        android:onClick="extremePerformance"
        android:paddingEnd="@dimen/size_large"
        android:paddingStart="@dimen/size_large"
        android:text="@string/extreme_performance"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/performance"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_vertical"
        android:onClick="performance"
        android:paddingEnd="@dimen/size_large"
        android:paddingStart="@dimen/size_large"
        android:text="@string/performance"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/defaultprofile"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_vertical"
        android:onClick="defaultProfile"
        android:paddingEnd="@dimen/size_large"
        android:paddingStart="@dimen/size_large"
        android:text="@string/default_profile"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/battery"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_vertical"
        android:onClick="battery"
        android:paddingEnd="@dimen/size_large"
        android:paddingStart="@dimen/size_large"
        android:text="@string/battery"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/extremebattery"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="fill_vertical"
        android:onClick="extremeBattery"
        android:paddingEnd="@dimen/size_large"
        android:paddingStart="@dimen/size_large"
        android:text="@string/extreme_battery"
        android:textAlignment="center"
        android:textSize="18sp" />
</LinearLayout>
